{
  "name": "ccsearch-browser-extension",
  "description": "A browser extension to find CC Licensed content and provide one click attribution.",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_title": "Creative Commons",
    "default_icon": "icons/cc.svg",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content.js",
        "popup/jquery.min.js",
        "popup/comboTreePlugin.js",
        "popup/masonry.min.js",
        "popup/imagesloaded.min.js"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
