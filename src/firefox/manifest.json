{
  "name": "ccsearch-browser-extension",
  "description": "A browser extension to find CC Licensed content and provide one click attribution.",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_title": "Creative Commons",
    "default_icon": {
      "16": "icons/cc16.png",
      "38": "icons/cc38.png",
      "48": "icons/cc48.png",
      "128": "icons/cc128.png"
    },
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content.js",
        "popup/vendors/js/jquery.min.js",
        "popup/vendors/js/comboTreePlugin.js",
        "popup/vendors/js/masonry.min.js",
        "popup/vendors/js/imagesloaded.min.js"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
